{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    /* Language and Environment */
    "target": "ES2022",
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "types": [
      "jest"
    ],
    /* Emit */
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "./test"
  ]
}